@using HardwareAffinity.Web.ViewModels.Categories
@model CategoryDisplayModel

@{
    this.ViewData["Title"] = this.Model.Title;
}

<div class="container-custom">
    <div class="row">
        <div class="col-12">
            <table class="table table-image">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th scope="col">View</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in this.Model.AllTVs)
                    {
                        <tr>
                            <th scope="row" class="w-25">
                                <img src="@product.MainImageUrl" class="img-fluid img-thumbnail" alt="@product.Title" />
                            </th>
                            <td>@product.Title</td>
                            <td>@product.ShortDescription</td>
                            <td>@product.Price</td>
                            <td><a class="btn btn-primary">Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

