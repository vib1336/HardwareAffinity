@model HardwareAffinity.Web.ViewModels.Categories.CreateCategoryInputModel

@{
    this.ViewData["Title"] = "Add category";
}

<form asp-controller="Categories" asp-action="AddCategory" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Category title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Description" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="submit" value="Create category" class="btn btn-success btn-block" />
</form>