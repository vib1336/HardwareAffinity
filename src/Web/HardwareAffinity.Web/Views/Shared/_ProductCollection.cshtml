@using HardwareAffinity.Web.ViewModels.Categories
@inject HardwareAffinity.Services.Data.ICategoriesService categoriesService
@{
    var allCategories = await this.categoriesService.GetAllCategoriesAsync<CategoryFormDataModel>();
}
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- shop -->
            @foreach (var category in allCategories)
            {
                <div class="col-md-4 col-xs-6">
                    <div class="shop">
                        <div class="shop-img">
                            <img src="./img/shop01.png" alt="@category.Title">
                        </div>
                        <div class="shop-body">
                            <h3>@category.Title<br>Collection</h3>
                            <a asp-controller="Categories" asp-action="All" asp-route-categoryId="@category.Id" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                </div>
            }
            <!-- /shop -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
