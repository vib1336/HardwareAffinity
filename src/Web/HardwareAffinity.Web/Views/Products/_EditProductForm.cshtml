@model HardwareAffinity.Web.ViewModels.Products.EditProductViewModel

<div class="modal fade" id="editProduct">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editProductTitle">Edit product</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <form id="editProductForm" method="post"></form>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" value="@this.Model.Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="3">@this.Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" value="@this.Model.Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" data-save="modal" onclick="editProduct('@this.Model.Id')">Submit</button>
            </div>
        </div>
    </div>
</div>
